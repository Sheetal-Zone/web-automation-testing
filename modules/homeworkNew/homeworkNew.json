    },
    "layouts": {
      "mobile": {
        "columns": 1,
        "filters": "stacked, collapsible",
        "table": "scrollable horizontally",
        "buttons": "touch-optimized"
      },
      "tablet": {
        "columns": 2,
        "filters": "responsive",
        "table": "adjusted column widths",
        "modals": "adapt to screen size"
      },
      "desktop": {
        "columns": "multi-column",
        "sidebar": "fixed",
        "table": "full-width with all columns",
        "actionButtons": "individual Save per row"
      }
    }
  },
  "accessibility": {
    "currentImplementation": [
      "keyboard navigation support",
      "screen reader compatible table structure",
      "color contrast ratios meeting WCAG standards",
      "focus indicators on buttons and form controls"
    ],
    "recommendedEnhancements": [
      "error message display for validations",
      "ARIA labels for table and filters",
      "skip navigation links for keyboard users",
      "high contrast and reduced motion support"
    ],
    "wcagCompliance": {
      "target": "WCAG 2.1 AA",
      "testingAuditPlan": [
        "automated axe-core tests",
        "manual keyboard navigation",
        "screen reader testing (NVDA/JAWS)",
        "color contrast validation"
      ]
    }
  },
  "functionality": {
    "filters": [
      {"name": "Select Class", "type": "dropdown", "mandatory": true},
      {"name": "Select Stream", "type": "dropdown", "mandatory": true},
      {"name": "Select Section", "type": "dropdown", "mandatory": true},
      {"name": "Choose Homework Date", "type": "datePicker", "mandatory": true}
    ],
    "tableColumns": [
      {"name": "Subject", "type": "text", "readonly": true, "mandatory": true},
      {"name": "Title", "type": "text", "mandatory": true, "validation": {"maxLength": 200, "validateOnBlur": true}},
      {"name": "Message", "type": "textarea", "mandatory": true, "validation": {"maxLength": 2000, "validateOnBlur": true}},
      {"name": "URL", "type": "text", "mandatory": false, "validation": {"format": "http/https", "validateOnBlur": true}},
      {"name": "URL Display Name", "type": "text", "mandatory": false},
      {
        "name": "File 1",
        "type": "file",
        "mandatory": false,
        "validation": {"maxSizeMB": 10, "allowedFormats": [".pdf", ".doc", ".jpg", ".png"], "duplicateFileCheck": true}
      },
      {
        "name": "File 2",
        "type": "file",
        "mandatory": false,
        "validation": {"maxSizeMB": 10, "allowedFormats": [".pdf", ".doc", ".jpg", ".png"], "duplicateFileCheck": true}
      },
      {"name": "Send Notification", "type": "checkbox", "mandatory": false}
    ],
    "maxCTAsPerRow": 1
  },
  "validationRules": {
    "requiredFields": ["Select Class","Select Stream","Select Section","Choose Homework Date","Title","Message"],
    "date": {"noPastDates": true, "format": "DD/MM/YYYY"},
    "title": {"maxLength": 200, "validateOnBlur": true},
    "message": {"maxLength": 2000, "validateOnBlur": true},
    "url": {"format": "http/https", "validateOnBlur": true},
    "fileUpload": {"maxSizeMB": 10, "allowedFormats": [".pdf",".doc",".jpg",".png"], "duplicateFileCheck": true}
  },
  "layout": {
    "header": ["Breadcrumbs (Dashboard > Homework)", "New Homework button", "Filter button", "Theme Toggle"],
    "filterBar": ["Class dropdown", "Stream dropdown", "Section dropdown", "Date picker"],
    "mainContent": ["Table with subjects", "Individual Save buttons per row", "Preview Button"]
  },
  "potentialIssues": [
